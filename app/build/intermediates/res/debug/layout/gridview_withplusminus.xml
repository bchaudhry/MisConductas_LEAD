<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relaGrid"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/numText" android:layout_width="30dp" android:layout_height="30dp" android:gravity="center" 
	        android:ellipsize="marquee" android:layout_marginLeft="120dp" android:layout_alignParentTop="true" 
	        android:marqueeRepeatLimit="marquee_forever"  android:singleLine="true" >
	    </TextView>
    <ImageView
        android:id="@+id/chooseImage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@id/numText"
        android:contentDescription="@string/app_name" >
    </ImageView>

    <TextView
        android:id="@+id/chooseText"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/chooseImage"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" >
    </TextView>

    <ImageView
        android:id="@+id/playVoice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/chooseImage"
        android:layout_toRightOf="@id/chooseText"
        android:src="@drawable/soundicon2"
        android:focusable="false" android:background="@android:color/white"
        android:focusableInTouchMode="false"/>

    <View
        android:layout_width="15dp"
        android:layout_height="40dp"
        android:layout_below="@id/chooseImage"
        android:layout_toRightOf="@id/playVoice"
        android:background="@android:color/white" 
        android:id="@+id/blankView">
    </View>
    
    <LinearLayout  android:layout_width="wrap_content" android:layout_marginTop="10dp"  android:layout_marginBottom="10dp"
        android:layout_height="50dp" android:orientation="horizontal" android:layout_below="@id/playVoice">
         <ImageView android:id="@+id/img_minus" android:layout_width="50dp"  android:layout_height="50dp" android:layout_marginLeft="10dp"
     		 android:background="@drawable/minus_sign" android:focusable="false" android:focusableInTouchMode="false" />
        <ImageView android:id="@+id/img_plus" android:layout_width="50dp"  android:layout_height="50dp" android:layout_marginRight="30dp"
        	android:layout_marginLeft="30dp" android:background="@drawable/plus_sign"  android:focusable="false"  android:focusableInTouchMode="false" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/bchaudhr/AndroidStudioProjects/MisConductas/app/src/main/res/layout/gridview_withplusminus.xml -->
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center|center_vertical|center_horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">
      	<ImageView
		    android:contentDescription="@string/soundIcon"
		    android:id="@+id/sound_Icon"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:src="@drawable/soundicon2"
		    android:layout_marginRight="20dp"
		    android:layout_alignParentRight="true" 
		    android:layout_marginTop="10dp"/>
<TextView 
	android:id="@+id/tv0"  
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:text="@string/login_message"
    android:textSize="20sp"
    android:textStyle="bold" 
    android:layout_marginBottom="15dp"
    android:layout_alignParentLeft="true" 
    android:layout_toLeftOf="@id/sound_Icon"
    android:gravity="center|center_horizontal"/>

      	</RelativeLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_gravity="center|center_vertical|center_horizontal"
    android:layout_marginBottom="15dp">
   	<ImageView
		    android:contentDescription="@string/img_pass_1"
		    android:id="@+id/img_pass_1"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginLeft="5dp"
		    android:background="#C3C3C3"/>
		     
   		<ImageView
		    android:contentDescription="@string/img_pass_2"
		    android:id="@+id/img_pass_2"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp" 
		    android:background="#C3C3C3"/>
   		
   		<ImageView
		    android:contentDescription="@string/img_pass_3"
		    android:id="@+id/img_pass_3"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp" 
		    android:background="#C3C3C3"/>
   			
   		<ImageView
		    android:contentDescription="@string/img_pass_4"
		    android:id="@+id/img_pass_4"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp"
		    android:background="#C3C3C3"/>
   	
   		 <ImageView
		    android:contentDescription="@string/img_pass_5"
		    android:id="@+id/img_pass_5"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp"
		    android:background="#C3C3C3"/>
    
</LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center|center_horizontal">

        <TableRow>
<ImageButton
    android:id="@+id/btn_heart"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_gravity="center_horizontal"
    android:adjustViewBounds="true"
    android:contentDescription="@string/heart"
    android:scaleType="centerCrop"
    android:src="@drawable/shape_heart"/>
<ImageButton
    android:id="@+id/btn_diamond"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_gravity="center_horizontal"
    android:adjustViewBounds="true"
    android:contentDescription="@string/diamond"
    android:scaleType="centerCrop"
    android:src="@drawable/shape_diamond"/>
<ImageButton
    android:id="@+id/btn_circle"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_gravity="center_horizontal"
    android:adjustViewBounds="true"
    android:contentDescription="@string/circle"
    android:scaleType="centerCrop"
    android:src="@drawable/shape_circle"/>
</TableRow>
        <TableRow>
<ImageButton
    android:id="@+id/btn_star"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_gravity="center_horizontal"
    android:adjustViewBounds="true"
    android:contentDescription="@string/star"
    android:scaleType="centerCrop"
    android:src="@drawable/shape_star"/>
<ImageButton
    android:id="@+id/btn_triangle"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_gravity="center_horizontal"
    android:adjustViewBounds="true"
    android:contentDescription="@string/triangle"
    android:scaleType="centerCrop"
    android:src="@drawable/shape_triangle"/>

<ImageButton
    android:id="@+id/btn_octagon"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:adjustViewBounds="true"
    android:contentDescription="@string/octagon"
    android:scaleType="centerCrop"
    android:src="@drawable/shape_octagon" />

</TableRow>
<TableRow
   android:gravity="center|center_horizontal" 
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <ImageButton
    android:contentDescription="@string/reset"
    android:id="@+id/btn_reset"
    android:layout_width="70dp"
    android:layout_height="70dp"
     android:scaleType="fitCenter"
     android:adjustViewBounds="true"
    android:src="@drawable/reset_password"/>
<ImageButton
    android:id="@+id/btn_delete"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:adjustViewBounds="true"
    android:contentDescription="@string/delete"
    android:scaleType="fitCenter"
    android:src="@drawable/delete" >
</ImageButton>

<ImageButton
    android:id="@+id/btn_login"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:adjustViewBounds="true"
    android:contentDescription="@string/login"
    android:scaleType="centerCrop"
    android:src="@drawable/lock">
</ImageButton>
 </TableRow>       
    </TableLayout>
</LinearLayout>

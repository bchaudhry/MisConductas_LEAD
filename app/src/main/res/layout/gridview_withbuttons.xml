<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relaGrid"
    android:layout_width="238dp"
    android:layout_height="238dp"
    android:background="@android:color/white"
    android:orientation="vertical" android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/chooseImage"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:contentDescription="@string/app_name" >
    </ImageView>

    <TextView
        android:id="@+id/chooseText"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/chooseImage"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" >
    </TextView>

    <ImageView
        android:id="@+id/playVoice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/chooseImage"
        android:layout_toRightOf="@id/chooseText"
        android:src="@drawable/soundicon2"
        android:focusable="false" android:background="@android:color/white"
        android:focusableInTouchMode="false" />

    <View
        android:layout_width="15dp"
        android:layout_height="40dp"
        android:layout_below="@id/chooseImage"
        android:layout_toRightOf="@id/playVoice"
        android:background="@android:color/white" 
        android:id="@+id/blankView">"
    </View>

</RelativeLayout>